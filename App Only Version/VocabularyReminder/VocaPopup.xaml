<Window x:Class="VocabularyReminder.VocaPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VocabularyReminder"
        mc:Ignorable="d"
        Title="VocaPopup"
        Width="600"
        MinHeight="400"
        MaxHeight="1000"
        SizeToContent="Height"
        Background="#1E1E1E"
        WindowStyle="None"
        AllowsTransparency="True"
        BorderBrush="#333333"
        BorderThickness="1">
    <Window.Resources>
        <Style TargetType="Label">
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="Margin" Value="0,4"/>
        </Style>
        <Style x:Key="SectionTitle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#666666"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Margin" Value="0,8,0,2"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#333333"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Height" Value="32"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#444444"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#555555"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Border Padding="20" Background="#1E1E1E" MouseEnter="Border_MouseEnter" MouseLeave="Border_MouseLeave">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

           <!-- Close Button -->
           <Button x:Name="CloseButton"
                   Grid.Row="0"
                        Content="✕"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Width="24"
                        Height="24"
                        Margin="0,-12,-12,0"
                        Background="Transparent"
                        BorderThickness="0"
                        Foreground="#666666"
                        Click="CloseButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="12">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#333333"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            
            <ScrollViewer Grid.Row="1"
                         VerticalScrollBarVisibility="Auto"
                         HorizontalScrollBarVisibility="Disabled"
                         Margin="0,5,0,0">
                <ScrollViewer.Resources>
                    <Style TargetType="ScrollBar">
                        <Setter Property="Background" Value="#1E1E1E"/>
                        <Setter Property="Foreground" Value="#333333"/>
                    </Style>
                </ScrollViewer.Resources>
                
                <StackPanel>
            <!-- Header -->
            <DockPanel Margin="0,0,0,10">
                <StackPanel DockPanel.Dock="Left">
                    <Label x:Name="Label_Word"
                           Content="Word"
                           FontSize="32"
                           FontWeight="Bold"
                           Padding="0"
                           Margin="0"/>
                    <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                        <StackPanel>
                            <Label Content="IPA 1"
                                   FontSize="10"
                                   Padding="0"
                                   Foreground="#666666"/>
                            <Label x:Name="Label_IPA"
                                   Content="IPA"
                                   FontSize="14"
                                   Padding="0"
                                   Margin="0,0,24,0"/>
                        </StackPanel>
                        <StackPanel>
                            <Label Content="IPA 2"
                                   FontSize="10"
                                   Padding="0"
                                   Foreground="#666666"/>
                            <Label x:Name="Label_IPA2"
                                   Content="IPA 2"
                                   FontSize="14"
                                   Padding="0"
                                   Margin="0,0,24,0"/>
                        </StackPanel>
                        <StackPanel>
                            <Label Content="Type"
                                   FontSize="10"
                                   Padding="0"
                                   Foreground="#666666"/>
                            <Label x:Name="Label_Type"
                                   Content="Type"
                                   FontSize="14"
                                   FontStyle="Italic"
                                   Padding="0"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </DockPanel>

            <!-- Translations -->
            <TextBlock Text="TRANSLATIONS" Style="{StaticResource SectionTitle}"/>
            <TextBlock x:Name="Label_Translate1"
                      Text="Vietnamese translation"
                      TextWrapping="Wrap"
                      Foreground="#FFFFFF"
                      FontSize="18"
                      Margin="0,4,0,8"/>
            <TextBlock x:Name="Label_Translate2"
                      Text="English definition"
                      TextWrapping="Wrap"
                      Foreground="#FFFFFF"
                      FontSize="18"
                      Margin="0,4,0,12"/>

            <!-- Example -->
            <TextBlock Text="EXAMPLE" Style="{StaticResource SectionTitle}"/>
            <TextBlock x:Name="Label_Example"
                      Text="Example usage"
                      TextWrapping="Wrap"
                      Foreground="#FFFFFF"
                      FontSize="16"
                      Margin="0,4,0,12"/>

            <!-- Related Words -->
            <TextBlock Text="RELATED WORDS" Style="{StaticResource SectionTitle}"/>
            <TextBlock x:Name="Label_Same"
                      Text="Related words"
                      TextWrapping="Wrap"
                      Foreground="#FFFFFF"
                      FontSize="16"
                      Margin="0,4,0,20"/>

            <!-- Control Buttons -->
            <UniformGrid Rows="1" Margin="0,10,0,0">
                <Button x:Name="Btn_PlaySound1"
                        Content="Play Sound 1"
                        Margin="0,0,5,0"
                        Click="Btn_PlaySound1_Click"/>
                <Button x:Name="Btn_PlaySound2"
                        Content="Play Sound 2"
                        Margin="5,0"
                        Click="Btn_PlaySound2_Click"/>
                <Button x:Name="Btn_Delete"
                        Content="Delete"
                        Margin="5,0"
                        Click="Btn_Delete_Click"/>
                <Button x:Name="Btn_Next"
                        Content="Next"
                        Margin="5,0"
                        Click="Btn_Next_Click"/>
                <Button x:Name="Btn_NextAndDelete"
                        Content="Next + Delete"
                        Margin="5,0,0,0"
                        Click="Btn_NextAndDelete_Click"/>
            </UniformGrid>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Border>
</Window>
