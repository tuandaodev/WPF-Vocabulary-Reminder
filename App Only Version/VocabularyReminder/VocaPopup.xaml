<Window x:Class="VR.VocaPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VR"
        mc:Ignorable="d"
        Title="VocaPopup"
        Width="600"
        MinHeight="400"
        MaxHeight="1000"
        SizeToContent="Height"
        Background="#1E1E1E"
        WindowStyle="None"
        ShowInTaskbar="False"
        AllowsTransparency="True"
        BorderBrush="#333333"
        BorderThickness="1"
        Focusable="True"
        KeyboardNavigation.TabNavigation="None"
        FocusManager.FocusedElement="{Binding ElementName=Btn_Good}">
    <Window.Resources>
        <Style TargetType="Label">
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="Margin" Value="0,4"/>
        </Style>
        <Style x:Key="SectionTitle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#666666"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Margin" Value="0,8,0,2"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#333333"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="MinWidth" Value="80"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderThickness="0"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#444444"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#555555"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Border Padding="20" Background="#1E1E1E" MouseEnter="Border_MouseEnter" MouseLeave="Border_MouseLeave">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

           <!-- Close Button -->
           <Button x:Name="CloseButton"
                   Grid.Row="0"
                        Content="✕"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Width="24"
                        Height="24"
                        Margin="0,-12,-12,0"
                        Background="Transparent"
                        BorderThickness="0"
                        Foreground="#666666"
                        Click="CloseButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="12">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                            VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#333333"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            
            <ScrollViewer Grid.Row="1"
                         VerticalScrollBarVisibility="Auto"
                         HorizontalScrollBarVisibility="Disabled"
                         Margin="0,5,0,0">
                <ScrollViewer.Resources>
                    <Style TargetType="ScrollBar">
                        <Setter Property="Background" Value="#1E1E1E"/>
                        <Setter Property="Foreground" Value="#333333"/>
                    </Style>
                </ScrollViewer.Resources>
                
                <StackPanel>
            <!-- Header -->
            <DockPanel Margin="0,0,0,10">
                <StackPanel DockPanel.Dock="Left">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <Label x:Name="Label_Word"
                                Grid.Column="0"
                                Content="Word"
                                FontSize="32"
                                FontWeight="Bold"
                                Padding="0"
                                Margin="0"/>
                        <Label x:Name="Label_Type"
                                Grid.Column="1"
                                Content="Type"
                                FontSize="16"
                                FontStyle="Italic"
                                Padding="0"
                                Margin="12,12,0,0"
                                VerticalAlignment="Top"
                                Foreground="#999999"/>
                        
                        <Button x:Name="Btn_OpenCambridge"
                                Grid.Column="3"
                                Content="🔍 C"
                                ToolTip="Open in Cambridge Dictionary"
                                Width="40"
                                Height="36"
                                Margin="0,0,8,0"
                                VerticalAlignment="Top"
                                Click="Btn_OpenCambridge_Click"/>
                        <Button x:Name="Btn_OpenOxford"
                                Grid.Column="4"
                                Content="🔍 O"
                                ToolTip="Open in Oxford Dictionary"
                                Width="40"
                                Height="36"
                                VerticalAlignment="Top"
                                Click="Btn_OpenOxford_Click"/>
                    </Grid>
                    
                    <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                        <StackPanel>
                            <Label Content="IPA US"
                                   FontSize="10"
                                   Padding="0"
                                   Foreground="#666666"/>
                            <Label x:Name="Label_IPA"
                                   Content="IPA"
                                   FontSize="16"
                                   Padding="0"
                                   Margin="0,0,24,0"/>
                        </StackPanel>
                        <StackPanel>
                            <Label Content="IPA UK"
                                   FontSize="10"
                                   Padding="0"
                                   Foreground="#666666"/>
                            <Label x:Name="Label_IPA2"
                                   Content="IPA 2"
                                   FontSize="16"
                                   Padding="0"
                                   Margin="0,0,24,0"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </DockPanel>

            <!-- Translations -->
            <TextBlock Text="TRANSLATIONS" Style="{StaticResource SectionTitle}"/>
            <TextBlock x:Name="Label_Translate1"
                      Text="Vietnamese translation"
                      TextWrapping="Wrap"
                      Foreground="#FFFFFF"
                      FontSize="18"
                      Margin="0,4,0,8"/>
            <TextBlock x:Name="Label_Translate2"
                      Text="English definition"
                      TextWrapping="Wrap"
                      Foreground="#FFFFFF"
                      FontSize="18"
                      Margin="0,4,0,12"/>

            <!-- Example -->
            <TextBlock Text="EXAMPLE" Style="{StaticResource SectionTitle}"/>
            <TextBlock x:Name="Label_Example"
                      Text="Example usage"
                      TextWrapping="Wrap"
                      Foreground="#FFFFFF"
                      FontSize="16"
                      Margin="0,4,0,4"/>

            <TextBlock x:Name="Label_ExampleTranslation"
                       Text=""
                       TextWrapping="Wrap"
                       Foreground="#88FFFFFF"
                       FontStyle="Italic"
                       FontSize="16"
                       Margin="0,4,0,4"
                       Visibility="Collapsed"/>
            
            <TextBlock x:Name="Label_ExamplePhonetic"
                       Text=""
                       TextWrapping="Wrap"
                       Foreground="#FFFFFF"
                       FontStyle="Italic"
                       FontSize="18"
                       Margin="0,0,0,12"
                       Visibility="Collapsed"/>
            
            <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                <Button x:Name="Btn_ReadExample"
                        Content="Read Example"
                        HorizontalAlignment="Left"
                        Width="120"
                        Click="Btn_ReadExample_Click"/>
                <Button x:Name="Btn_TranslateExample"
                        Content="Translate Example"
                        HorizontalAlignment="Left"
                        Width="120"
                        Margin="8,0,0,0"
                        Click="Btn_TranslateExample_Click"/>
                <Button x:Name="Btn_GetExamplePhonetics"
                          Content="Get Phonetics"
                          HorizontalAlignment="Left"
                          Width="120"
                          Margin="8,0,0,0"
                          Click="Btn_GetExamplePhonetics_Click"/>
            </StackPanel>

            <!-- Related Words -->
            <TextBlock Text="RELATED WORDS" Style="{StaticResource SectionTitle}"/>
            <TextBlock x:Name="Label_Same"
                      Text="Related words"
                      TextWrapping="Wrap"
                      Foreground="#FFFFFF"
                      FontSize="16"
                      Margin="0,4,0,20"/>

            <!-- SRS Information -->
            <TextBlock Text="REVIEW INFORMATION" Style="{StaticResource SectionTitle}"/>
            <Grid Margin="0,4,0,12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <TextBlock Grid.Row="0" Grid.Column="0"
                          Text="Next Review: "
                          Foreground="#666666"/>
                <TextBlock x:Name="Label_NextReview"
                          Grid.Row="0" Grid.Column="1"
                          Text="Not scheduled"
                          Foreground="#FFFFFF"/>
                
                <TextBlock Grid.Row="1" Grid.Column="0"
                          Text="Current Interval: "
                          Foreground="#666666"/>
                <TextBlock x:Name="Label_Interval"
                          Grid.Row="1" Grid.Column="1"
                          Text="New"
                          Foreground="#FFFFFF"/>
            </Grid>

            <!-- Rating Buttons -->
            <UniformGrid Rows="1" Margin="0,0,0,20">
                <Button x:Name="Btn_Again"
                        Content="Again (1)"
                        Background="#E57373"
                        Margin="0,0,5,0"
                        Click="Btn_Again_Click"/>
                <Button x:Name="Btn_Hard"
                        Content="Hard (2)"
                        Background="#FFB74D"
                        Margin="5,0"
                        Click="Btn_Hard_Click"/>
                <Button x:Name="Btn_Good"
                        Content="Good (3)"
                        Background="#81C784"
                        Margin="5,0"
                        Click="Btn_Good_Click"/>
                <Button x:Name="Btn_Easy"
                        Content="Easy (4)"
                        Background="#64B5F6"
                        Margin="5,0,0,0"
                        Click="Btn_Easy_Click"/>
            </UniformGrid>

            <!-- Control Buttons -->
            <UniformGrid Rows="1" Margin="0,0,0,0">
                <Button x:Name="Btn_PlaySound1"
                        ToolTip="Play Sound US (F8)"
                        Content="▶"
                        Margin="0,0,5,0"
                        FontSize="14"
                        Click="Btn_PlaySound1_Click"/>
                <Button x:Name="Btn_PlaySound2"
                        ToolTip="Play Sound UK (SHIFT+F8)"
                        Content="▷"
                        Margin="5,0"
                        FontSize="14"
                        Click="Btn_PlaySound2_Click"/>
                <Button x:Name="Btn_Next"
                        ToolTip="Next (SCROLL)"
                        Content="➔"
                        Margin="5,0"
                        FontSize="14"
                        Click="Btn_Next_Click"/>
            </UniformGrid>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Border>
</Window>
